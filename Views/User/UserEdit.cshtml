@model CompanyManagement.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header bg-info text-white">
            <span><b>Edit User Information</b></span>
            <button type="button" class="close trigger-reload text-white" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-controller="User" asp-action="UserEdit"
                  data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                  data-ajax-failure="onFailed" data-ajax-success="onSuccessForTicket"
                  data-ajax="true" data-ajax-method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="control-label">Company</label>
                        </div>
                        <div class="col-md-8">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UserPassword" />
                            <select asp-for="CompanyId" asp-items="(SelectList)ViewBag.Company" class="form-control">
                                <option value="0">Select One</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="control-label">Role</label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="UserRoleId" asp-items="(SelectList)ViewBag.UserRole" class="form-control">
                                <option value="0">Select One</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="UserName" class="col-md-4 col-form-label">User Name</label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="UserName" required placeholder="User Name" />
                            <span class="text-danger field-validation-valid" asp-validation-for="UserName" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="UserName" class="col-md-4 col-form-label">User Tittle</label>
                        <div class="col-md-8">
                            <input type="hidden" asp-for="Id" />
                            <input class="form-control" asp-for="UserTitle" required="required" placeholder="UserTitle" />
                            <span class="text-danger field-validation-valid" asp-validation-for="UserTitle" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer float-right">
                    <input type="submit" class="btn btn-sm btn-success" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
